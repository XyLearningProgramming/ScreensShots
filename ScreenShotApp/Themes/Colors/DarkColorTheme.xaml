	<!--Buttons-->
	<SolidColorBrush x:Key="Brush.Button.Background" Color="#FF202020"/>
	<SolidColorBrush x:Key="Brush.Button.Background.Hover" Color="#AA34373B"/>
	<SolidColorBrush x:Key="Brush.Button.Background.Checked" Color="#802D3D54"/>
	<SolidColorBrush x:Key="Brush.Button.Background.Pressed" Color="#F02A313B"/>
	<SolidColorBrush x:Key="Brush.Button.Background.Focused" Color="#AA373E42"/>

	<SolidColorBrush x:Key="Brush.Button.Border" Color="#FF545454"/>
