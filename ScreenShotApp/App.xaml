<Application x:Class="ScreenShotApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ScreenShotApp"
             xmlns:vm="clr-namespace:ScreenShotApp.ViewModels">
    <Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>

				<ResourceDictionary>
					<!--View models' instances-->
					<vm:RootViewModel x:Key="RootViewModel"></vm:RootViewModel>

				</ResourceDictionary>
				<!--Load styles from shared project-->
				<ResourceDictionary Source="pack://application:,,,/ScreenShotWindows;component/Themes/Generic.xaml">
				</ResourceDictionary>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
    </Application.Resources>
</Application>
